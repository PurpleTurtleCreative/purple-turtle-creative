{
  "devDependencies": {
    "@wordpress/scripts": "^26.11.0",
    "sass": "^1.69.5",
    "terser-folder": "^2.0.0"
  },
  "scripts": {
    "build": "npm run build:blocks && npm run styles && npm run scripts",
    "start:blocks": "wp-scripts start --webpack-src-dir=blocks/src/ --output-path=blocks/build/",
    "build:blocks": "wp-scripts build --webpack-src-dir=blocks/src/ --output-path=blocks/build/",
    "styles": "sass --style=compressed assets/styles/scss:assets/styles",
    "watch:styles": "sass --style=expanded --watch assets/styles/scss:assets/styles",
    "scripts": "terser-folder assets/scripts/js/ --each --output=assets/scripts/ --config-file=./terser.json"
  }
}
